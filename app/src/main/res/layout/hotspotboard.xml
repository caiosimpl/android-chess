<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dip">

    <include
        android:id="@+id/includeboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        layout="@layout/chessboard" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TableLayout
            android:id="@+id/LayoutConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/SwitchHost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Host"
                    android:checked="true"
                    ></com.google.android.material.switchmaterial.SwitchMaterial>

                <Button
                    android:id="@+id/PlayAsWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:text="White" />

                <Button
                    android:id="@+id/PlayAsBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"
                    android:text="Black" />
            </TableRow>
            <TableRow>
                <EditText
                    android:id="@+id/EditName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <Button android:id="@+id/ButtonConnect"
                    android:text="Connect"
                    android:layout_width="wrap_content"
                    style="@style/ChessButton"/>
            </TableRow>
        </TableLayout>

            <Button android:id="@+id/ButtonNew"
                android:text="New"
                android:layout_width="wrap_content"
                style="@style/ChessButton"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
