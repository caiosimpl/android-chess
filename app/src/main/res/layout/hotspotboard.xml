<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dip">

    <TextView
        android:id="@+id/TextOpponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"/>

    <include
        android:id="@+id/includeboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        layout="@layout/chessboard" />

    <TextView
        android:id="@+id/TextPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/TextStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/LayoutConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/SwitchHost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Host"
                        android:checked="true"
                        ></com.google.android.material.switchmaterial.SwitchMaterial>
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/EditName"
                        android:hint="Your name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow>
                    <Button android:id="@+id/ButtonConnect"
                        android:text="Connect"
                        android:layout_width="wrap_content"
                        style="@style/ChessButton"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/LayoutGameButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button android:id="@+id/ButtonResign"
                    android:text="Resign"
                    android:layout_width="wrap_content"
                    style="@style/ChessButton"/>

                <Button android:id="@+id/ButtonDraw"
                    android:text="Draw"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    style="@style/ChessButton"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutNewGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dip"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/colorToggleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonWhite"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♔ White" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonBlack"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♚ Black" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
                <Button android:id="@+id/ButtonNew"
                    android:text="New"
                    android:layout_width="wrap_content"
                    style="@style/ChessButton"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
